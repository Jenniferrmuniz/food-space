<form action="/user/login" method="POST" id="login-form">
  
    <img class='background'
    src="https://images.unsplash.com/photo-1505935428862-770b6f24f629?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1647&q=80"
    alt="food image">

  <div class='welcome'>
    <h1>FoodSpace</h1>
  </div>

  <h2>Login</h2>

  <label for="username">Username</label>
  <input type="text" name="username">

  <label for="password">Password</label>
  <input type="password" name="password">


  {{!-- {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}} --}}

  <button type='submit'>Login</button>

  {{!-- google login if we want to add later --}}

  {{!-- {{#unless user}}
  <div>
    <a href="/user/auth/google">Login With Google</a>
  </div>
  {{/unless}} --}}

  <p class="account-message">
    Don't have an account? <a href="/user/signup">Sign up</a>
  </p>
</form>